<% include ./partials/header.ejs  %>

<div class="w-full h-screen bg-zinc-300 bg-gradient-to-r from-violet-500 to-fuchsia-500 flex items-center justify-center">
  <div class="w-[25vw] h-[60vh] bg-white px-10 py-10 rounded-[30px]">
    <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New Account</h1>
    <form action="/register" method="post" enctype="">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-500 text-white rounded-full" type="submit" value="Create New Account">
      <p class="text-xs font-semibold text-zinc-700 mt-4  w-2/3 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service.</p>
    </form>
    <a class="inline-block mt-3 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login exiting Account</a>
  </div>
</div>

<% include ./partials/footer.ejs  %>
