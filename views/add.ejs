<% include ./partials/header.ejs  %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create New Post</h1>
    <hr class="opacity-10 mt-3">
    <form class="" action="/createposts" enctype="multipart/form-data" method="post">
        <input class="block w-1/3 px-3 py-2 text-black" type="file" name="postImage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 text-black" type="text" placeholder="Title">
        <textarea class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 h-40 text-black" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 bg-red-700 rounded-md" type="submit" value="Create Post">
    </form>
</div>

